#!/bin/bash

service jenkins start || true

RUN_CHARM_TESTS=$(config-get run_charm_tests)
if [ -n "$RUN_CHARM_TESTS" ]; then
  juju-log "creating/updating jenkins jobs for charms"
  sleep 300
  export JENKINS_HOME=/var/lib/jenkins; sudo -HEsu jenkins $JENKINS_HOME/bin/run-priority-charm-jobs 2>&1 | sudo -HEsu jenkins tee $JENKINS_HOME/run.log > /dev/null
fi
